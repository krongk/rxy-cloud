<ul class="breadcrumb">
  <li><%= link_to '添加案例', new_product_item_path, class: 'btn btn-primary', type: 'button' %><span class="divider">/</span></li>
  <li><%= link_to '添加分类', new_product_cate_path, class: 'btn btn-primary', type: 'button' %><span class="divider">/</span></li>
</ul>


<h1>案例列表</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>分类</th>
      <th>标题</th>
      <th>图片</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @product_items.each do |product_item| %>
      <tr>
        <td><%= product_item.product_cate.name %></td>
        <td><%= product_item.title %></td>
        <td><%= image_tag product_item.image_url, width: '60px', height: '60px' %></td>
        <td><%= link_to '查看', product_item %></td>
        <td><%= link_to '修改', edit_product_item_path(product_item) %></td>
        <td><%= link_to '删除', product_item, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加案例', new_product_item_path, class: 'btn btn-primary' %>

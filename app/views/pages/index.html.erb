<h1>页面管理</h1>

<ul class="breadcrumb">
  <li><%= link_to '添加页面', new_page_path, class: 'btn btn-primary', type: 'button' %></li>
</ul>

<table class="table table-bordered table-stripped">
  <thead>
    <tr>
      <th>标题</th>
      <th>路径</th>
      <th>关键词</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.name %></td>
        <td><%= page.keywords %></td>
        <td><%= link_to '查看', page, target: '_blank' %></td>
        <td><%= link_to '修改', edit_page_path(page) %></td>
        <td><%= link_to '删除', page, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="pagination" style="text-align: center;">
  <%= will_paginate @pages %>
</div>
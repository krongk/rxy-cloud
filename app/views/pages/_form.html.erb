<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {class: "input-block-level"} %>
    <%#= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'simple'}, height: "700px" } %>
    <%#= f.input :title %>
    <%= f.input :content, input_html: {class: "input-block-level", rows: 20}  %>
    <%= f.input :name %>
    <%= f.input :keywords %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

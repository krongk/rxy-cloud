<%= content_for(:head) do %>
  <%= stylesheet_link_tag "theme/contact" %>
<% end %>

<div id="contact">
    <div class="container">
        <div class="section_header">
            <h3>联系我们</h3>
        </div>
        <div class="row contact">
            <p>
               通过留言提交你的需求，我们会及时响应，为你提供专业咨询服务。</p>

            <%= simple_form_for(@comment) do |f| %>
                <%= f.error_notification %>
                <div class="row form">
                    <div class="span6 box">
                        <input type="text" name="comment[name]" placeholder="姓名" />
                        <input type="text" name="comment[email]" placeholder="电子邮件" />
                        <input type="text" name="comment[mobile_phone]" placeholder="手机号码" />
                    </div>
                    <div class="span6 box box_r">
                        <textarea name="comment[content]" placeholder="输入要咨询的内容..."></textarea>
                    </div>
                </div>

                <div class="row submit">
                    <div class="span5 box">
                        
                    </div>
                    <div class="span3 right">
                        <input type="submit" value="提交我的信息">
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <div class="row map">
        <div class="container">
            <div class="span5 box_wrapp">
                <div class="box_cont">
                   <%= raw @page.content %>
                </div>
            </div>
        </div>
        <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com.mx/?ie=UTF8&amp;ll=30.60748139277394,104.00894165039062&amp;spn=0.045157,0.15398&amp;t=m&amp;z=13&amp;output=embed"></iframe>
    </div>
</div>

